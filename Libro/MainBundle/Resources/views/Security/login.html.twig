{% extends '::base.html.twig' %}
{% block body %}
<script type="text/javascript">
window.onload = function() {
  window.location.hash="no-back-button";
  window.location.hash="Again-No-back-button" //chrome
  window.onhashchange=function(){window.location.hash="no-back-button";}
}
</script>
<style>
  body{
    background-color: transparent;
    background-image: url("{{asset('public/images/fondo3.png')}}");
    background-repeat: no-repeat;
    background-size: cover;
    background-position: center top;
    background-attachment: fixed;


  }
</style>
<section>
  <form action="{{ path('libro_main_login') }}" method="post">
  <div class="container-edit">
    <div class="row">
        <div class="col s12 m6">
          <div class="card white darken-1">
            <div class="card-content black-text">
              <span class="card-title">Bitácora de Documentos</span>
              <!-- los inputs -->
              <div class="row">
                <div class="input-field col s12">
                  <input type="text" name="dni" id="DNI">
                  <label for="DNI"><strong>DNI</strong></label>
                </div>
              </div>
              <div class="row">
                <div class="input-field col s12">
                  <input type="password" name="pass" id="password">
                  <label for="password"><strong>Contraseña</strong></label>
                </div>
              </div>
              <input type="hidden" name="_csrf_token" value="{{ csrf_token('autenticate') }}">
            <div class="card-action center">
              <button class="btn waves-effect waves-light" type="submit" name="submit">ingresar
               <i class="material-icons right">send</i>
              </button>
            </div>
          </div>
        </div>
      </div>
      </div>
    </div>
  </form>
</section>
{% endblock %}
