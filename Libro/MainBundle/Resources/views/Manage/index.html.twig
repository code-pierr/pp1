<section class="section-ajustar">
  <table>
    <thead>
      <tr>
        <th>#</th>
        <th>Estado</th>
        <th>Fecha</th>
        <th>Asunto</th>
        <th># de Expediente</th>
        <th>Realizado por:</th>
      </tr>
    </thead>
    <tbody>
      {% for libro in libros %}
      <tr>
        <td>{{libro.id}}</td>
        <td>{{libro.estado}}</td>
        <td>{{libro.fecha|date("d/m/Y")}}</td>
        <td>{{libro.asunto}}</td>
        {% if libro.expediente %}
        <td>{{libro.expediente.id}}</td>
        {% endif %}
        {% if libro.usuario %}
        <td>{{libro.usuario.nombre}}</td>
        {% endif %}
      </tr>
      {% endfor %}
    </tbody>
  </table>
</section>
{% endblock %}
